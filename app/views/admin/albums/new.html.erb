<h1>New Album</h1>
  <% if  @album.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize( @album.errors.count, "error") %> ,this album can't be saved :</h3>

      <ul>
      <%  @album.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <% end %>

<%= form_for [:admin, @album] do |f| %>

    <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
    </div>

    <div class="field">
      <%= f.label :rating %>
      <%= f.text_field :rating %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>